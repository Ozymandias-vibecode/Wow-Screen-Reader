import tkinter as tk
import keyboard
import threading

def my_function():
    print("HOTKEY OR BUTTON PRESSED")

def hotkey_listener():
    keyboard.add_hotkey("ctrl+alt+f9", my_function)
    keyboard.wait()  # keeps the listener alive

root = tk.Tk()
root.title("Macro Button")
root.attributes("-topmost", True)
root.geometry("200x100")
root.resizable(False, False)

button = tk.Button(root, text="Run Function", command=my_function)
button.pack(expand=True)

# Run keyboard listener in background thread
threading.Thread(target=hotkey_listener, daemon=True).start()

root.mainloop()